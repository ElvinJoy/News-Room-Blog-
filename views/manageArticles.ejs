<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>manage articles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>Welcome to the manage articles page</h1>
    
    <% articles.forEach(article => { %>
      <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
          <div class="col-lg-12 p-4 p-sm-5 pt-lg-3">
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><strong>Title:</strong> <%= article.title %></h5>
                <% topicsData.forEach(topic => { %>
                  <p class="card-text"><strong>Topic:</strong> <%= topic.topic %></p>
                <% }); %>
                <p class="card-text"><strong>Content:</strong> <%= article.content %></p>
                <p class="card-text"><strong>Uploaded By:</strong> <%= article.name %></p>
                <p class="card-text"><strong>Date:</strong> <%= article.Date %></p>
              </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
              <a href="/admin">
                <button type="button" class="btn btn-primary btn-lg px-4 me-md-0 mt-5 fw-bold">View</button>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
</body>
</html>
